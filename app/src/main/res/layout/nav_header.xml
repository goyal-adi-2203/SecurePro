<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_picture_nav_header"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/default_pro_pic"
        app:shapeAppearanceOverlay="@style/CircularImageViewStyle"
        android:scaleType="centerCrop"
        />


    <TextView
        android:id="@+id/name_nav_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Placeholder Name"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/username_nav_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Placeholder Username"
        android:textColor="@color/black"
        android:textSize="14sp" />


</LinearLayout>